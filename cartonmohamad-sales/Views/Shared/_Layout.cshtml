@using System.Web.Mvc
@{
    Layout = null;
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    Func<string, string, string> isActive = (c, a) =>
    {
        bool byController = controller.Equals(c, System.StringComparison.OrdinalIgnoreCase);
        if (string.IsNullOrEmpty(a)) return byController ? "active" : "";
        bool byAction = action.Equals(a, System.StringComparison.OrdinalIgnoreCase);
        return (byController && byAction) ? "active" : (byController && string.IsNullOrEmpty(a) ? "active" : "");
    };
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - سامانه فروش کارتن محمد</title>

    <!-- Bootstrap 5 RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <!-- Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <!-- Custom -->
    <style>
        :root {
            --brand: #0ea5e9;
            --brand-600: #0284c7;
        }

        body {
            background-color: var(--bs-body-bg);
        }

        .navbar-brand b {
            color: var(--brand);
        }

        .shadow-soft {
            box-shadow: 0 10px 25px rgba(0,0,0,.08);
        }

        .nav-link.active {
            background: rgba(14,165,233,.12);
            border-radius: .6rem;
            color: var(--brand-600) !important;
        }

        .app-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content-wrap {
            flex: 1 1 auto;
        }

        .page-header {
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0,0,0,.06);
            margin-bottom: 1rem;
        }

        footer {
            border-top: 1px dashed rgba(0,0,0,.1);
        }
        /* Dark mode helpers */
        .dark body, .dark .dropdown-menu {
            background-color: #0f172a;
            color: #e5e7eb;
        }

        .dark .navbar, .dark .card {
            background-color: #111827 !important;
        }

        .dark .form-control, .dark .form-select {
            background: #0b1220;
            color: #e5e7eb;
            border-color: #1f2937;
        }

        .dark .nav-link.active {
            background: #0b5aa7;
            color: #fff !important;
        }
    </style>

    @RenderSection("Head", required: false)
</head>
<body data-theme="light">
    <div class="app-container">

        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm py-2">
            <div class="container-fluid container-lg">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index","Home")">
                    <i class="fa-solid fa-box-open me-1"></i> <b>کارتن محمد</b>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Main menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-1">
                        <li class="nav-item">
                            <a class="nav-link @isActive("Products","")" href="@Url.Action("Index","Products")">
                                <i class="fa-solid fa-cubes"></i> محصولات
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @isActive("Orders","")" href="@Url.Action("Index","Orders")">
                                <i class="fa-solid fa-file-invoice-dollar"></i> سفارش‌ها
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @isActive("Customers","")" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fa-regular fa-user"></i> مشتریان
                            </a>
                            <ul class="dropdown-menu shadow-soft">
                                <li><a class="dropdown-item" href="@Url.Action("Index","Customers")"><i class="fa-regular fa-address-book ms-2"></i> لیست مشتریان</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Create","Customers")"><i class="fa-solid fa-user-plus ms-2"></i> مشتری جدید</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","CustomerMarketingActivities")"><i class="fa-solid fa-headset ms-2"></i> فعالیت‌های بازاریابی</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @isActive("Pricing","")" href="#" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-calculator"></i> قیمت‌گذاری
                            </a>
                            <ul class="dropdown-menu shadow-soft">
                                <li><a class="dropdown-item" href="@Url.Action("Index","Tb_Paper")"><i class="fa-solid fa-scroll ms-2"></i> کاغذها</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","PaperCombos")"><i class="fa-solid fa-layer-group ms-2"></i> ترکیب کاغذ</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","OverheadCosts")"><i class="fa-solid fa-sack-dollar ms-2"></i> هزینه‌های سرباره</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","FinalCharges")"><i class="fa-solid fa-percent ms-2"></i> هزینه‌های نهایی</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @isActive("Reports","")" href="@Url.Action("Index","Reports")">
                                <i class="fa-solid fa-chart-line"></i> گزارش‌ها
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @isActive("Settings","")" href="#" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-gear"></i> تنظیمات
                            </a>
                            <ul class="dropdown-menu shadow-soft">
                                <li><a class="dropdown-item" href="@Url.Action("Index","Settings")"><i class="fa-solid fa-sliders ms-2"></i> عمومی</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","Users")"><i class="fa-solid fa-users ms-2"></i> کاربران و نقش‌ها</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Right side: search + theme + user -->
                    <form class="d-flex me-3" role="search" method="get" action="@Url.Action("Search","Home")">
                        <input class="form-control" type="search" name="q" placeholder="جستجو..." aria-label="Search">
                    </form>

                    <div class="d-flex align-items-center gap-2">
                        <button id="themeToggle" class="btn btn-outline-secondary" type="button" title="حالت تیره/روشن">
                            <i class="fa-solid fa-moon"></i>
                        </button>

                        <div class="dropdown">
                            <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fa-regular fa-circle-user"></i> @User.Identity.Name ?? "کاربر مهمان"
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-soft">
                                @if (User?.Identity?.IsAuthenticated ?? false)
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Manage", new { area = "Identity" })"><i class="fa-regular fa-id-badge ms-2"></i> پروفایل</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Logout","Account")"><i class="fa-solid fa-right-from-bracket ms-2"></i> خروج</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Login","Account")"><i class="fa-solid fa-right-to-bracket ms-2"></i> ورود</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Register","Account")"><i class="fa-solid fa-user-plus ms-2"></i> ثبت‌نام</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- CONTENT -->
        <main class="content-wrap container-lg mt-3">
            <!-- TempData Alerts -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa-regular fa-circle-check ms-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa-regular fa-circle-xmark ms-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Page header / breadcrumb -->
            <div class="page-header d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h4 mb-0">@ViewBag.Title</h1>
                    @RenderSection("Breadcrumb", required: false)
                </div>
                @RenderSection("HeaderActions", required: false)
            </div>

            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="mt-4 py-3 text-center text-muted">
            <div class="container-lg">
                <small>
                    © @DateTime.Now.Year — سامانه فروش کارتن محمد ·
                    <a href="https://github.com/setarehHosseinNet/cartonmohamad-sales-db" target="_blank">GitHub</a>
                </small>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Dark mode toggle with localStorage
    (function () {
        const key = "cm_theme";
        const btn = document.getElementById("themeToggle");
        const apply = (mode) => {
            if (mode === "dark") document.documentElement.classList.add("dark");
            else document.documentElement.classList.remove("dark");
            localStorage.setItem(key, mode);
        };
        apply(localStorage.getItem(key) || "light");
        btn?.addEventListener("click", () => {
            const current = localStorage.getItem(key) || "light";
            apply(current === "light" ? "dark" : "light");
        });
    })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
